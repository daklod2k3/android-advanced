<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- CardView for elevation and rounded corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <!-- RelativeLayout for main content with background color -->
        <RelativeLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ImageView for item image -->
            <ImageView
                android:id="@+id/item_imgchitiet"
                android:src="@drawable/no_img"
                android:background="#fff"
                android:scaleType="centerCrop"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <!-- LinearLayout for item details -->
            <LinearLayout
                android:padding="2dp"
                android:layout_toEndOf="@+id/item_imgchitiet"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- TextView for item name -->
                <TextView
                    android:id="@+id/item_tenspchitiet"
                    android:text="Laptop"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- TextView for item quantity -->
                <TextView
                    android:id="@+id/item_soluongchitiet"
                    android:textColor="#fff"
                    android:text="x2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- TextView for item price -->
                <TextView
                    android:id="@+id/item_giachitiet"
                    android:textColor="#fff"
                    android:text="20.000.000Ä‘"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
